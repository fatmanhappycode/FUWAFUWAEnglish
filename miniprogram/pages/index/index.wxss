.top-title{
  font-size: 2rem;
  margin-bottom: 2rem;
}

.choose-view{
  display: flex;
  flex-direction: row;
}

.click-list{
  display:flex;
  position: relative;
  flex-direction: column;
  width: 8rem;
  margin: 1rem 1rem;
}

.show-list{
  position: absolute;
  top: 100%;
}

.type-choose{
  width: 8rem;
}

.list-content{
  display: inline-block;
  width: 8rem;
  text-align: center;
  border: 1rpx solid black;
  background-color: white;
  z-index:2;
}

.search-view{
  display: flex;
  position: relative;
  flex-direction:row;
}

.search-tip{
  position: absolute;
  display: flex;
  flex-direction: column;
  top: 100%;
}

.search-tip text{
  display: inline-block;
  border: 1px solid #000;
  width: 225px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.no-search{
  text-align: center;
}

.input-down{
  z-index: -1;
}

.input-up{
  z-index:1;
}

.input{
  display: inline-block;
  height: 3rem;
  width: 12rem;
  border-bottom: 1px solid black;
  text-indent: 1rem;
}

.search-btn{
  width: 6rem;
}

.search-list{
  width: 100%;
  margin-top:3rem; 
}

.movie-container{
  position: relative;
  display: flex;
  flex-direction: row;
  height: 200rpx;
  padding:16px 0.5px;
  border-bottom:1rpx solid rgba(102,102,102,0.5);
}

.movie-img{
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  border: 6rpx double black;
}

.movie-name{
  float: left;
  width: 100%;
  margin-bottom: 15rpx;
  font-size:45rpx;
  text-indent:10rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.movie-type{
  margin-left: 10rpx;
  color:#666;
}

.enter-detailed{
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  padding: 5rpx;
  background-color: #69f;
  color: #fff;
}